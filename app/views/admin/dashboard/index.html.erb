<!-- app/views/admin/dashboard/index.html.erb -->
<div class="container-fluid px-5 py-3">
  <h1 class="display-4">Dashboard</h1>
  <hr class="my-4">
  <div class="row">
    <!-- Stats Cards -->
    <div class="col-md-3">
      <div class="card text-white bg-primary mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Orders</h5>
          <h2><%= @total_sales %></h2>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card text-white bg-success mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Revenue</h5>
          <h2>$<%= number_with_precision(@total_earnings, precision: 2) %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-info mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Products</h5>
          <h2><%= Product.where(user_id: current_user.id).count %></h2>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-white bg-warning mb-3">
        <div class="card-body">
          <h5 class="card-title">Total Customers</h5>
          <h2><%= Customer.joins(:orders => :order_items).where(order_items: { id: current_user.id }).distinct.count %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Orders Table -->
  <div class="card mt-4">
    <div class="card-header">
      <h5>Recent Orders</h5>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Status</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_orders.each do |order| %>
            <tr>
              <td>#<%= order.id %></td>
              <td><%= order.customer.try(:first_name) %></td>
              <td>$<%= number_with_precision(order.total_price, precision: 2) %></td>
              <td><span class="badge bg-<%= order.status == 'completed' ? 'success' : 'warning' %>">
                <%= order.status %>
              </span></td>
              <td><%= order.created_at.strftime("%b %d, %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent Customers Table -->
  <%if current_user.admin? %>
  <div class="card mt-4" >
    <div class="card-header">
      <h5>Recent Customers</h5>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_customers.each do |customer| %>
            <tr>
              <td>#<%= customer.id %></td>
              <td><%= customer.first_name %> <%= customer.last_name %></td>
              <td><%= customer.email %></td>
              <td><%= customer.address %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
  <!-- Latest Products Table -->
  <div class="card mt-4">
    <div class="card-header">
      <h5>Latest Products</h5>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Sales</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          <%# @latest_products.each do |product| %>
          <% @products.order(created_at: :desc).take(5).each do |product| %>
            <tr>
              <td>#<%= product.id %></td>
              <td><%= product.title %></td>
              <td>$<%= number_with_precision(product.price, precision: 2) %></td>
              <td><%= product.stock %></td>
              <td><%= product.sales_count %></td>
              <td><%= 'category' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>