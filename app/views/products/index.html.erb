<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Products List</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-compact w-full border border-gray-300 rounded-lg">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 border-b border-gray-300">Title</th>
        <th class="px-6 py-3 border-b border-gray-300">Price</th>
        <th class="px-6 py-3 border-b border-gray-300">Quantity</th>
        <th class="px-6 py-3 border-b border-gray-300">Category</th>
        <th class="px-6 py-3 border-b border-gray-300">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr class="hover:bg-gray-100">
          <td class="px-6 py-4 border-b border-gray-300">
            <%= image_tag(product.image_url, class: "rounded-full me-2", width: 50, height: 50) %>
            <%= product.title %>
          </td>
          <td class="px-6 py-4 border-b border-gray-300">$<%= number_with_precision(product.price, precision: 2) %></td>
          <td class="px-6 py-4 border-b border-gray-300"><%= product.quantity %></td>
          <td class="px-6 py-4 border-b border-gray-300">
          <%# <%= product.category.title %>
          </td>
          <td class="px-6 py-4 border-b border-gray-300">
            <%= link_to "View", customer_product_path(product), class: "btn btn-sm btn-info bg-blue-500 rounded-full px-4 py-2" %>
            <%= link_to "Buy", customer_checkout_path(product), class: "btn btn-sm btn-info bg-blue-500 rounded-full px-4 py-2" %>
            <%= link_to "Add to Cart", customer_cart_path, method: :post, params: { product_id: product.id }, class: "btn btn-sm btn-info bg-blue-500 rounded-full px-4 py-2" %>

          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
