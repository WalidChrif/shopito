<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @product.title %></h1>
    <div>
      <%= link_to "Back to Products", user_products_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <img src="<%= @product.image_url %>" class="img-fluid rounded" alt="<%= @product.title %>">
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= @product.title %></h4>
          <p class="card-text"><strong>Price:</strong> $<%= number_with_precision(@product.price, precision: 2) %></p>
          <p class="card-text"><strong>Quantity:</strong> <%= @product.quantity %></p>
        </div>
        <div class="card-footer d-flex justify-content-end">

            
        </div>
      </div>
    </div>
  </div>
</div>