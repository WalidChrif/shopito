<div class="container mt-5">
  <div class="row">
    <p class="card-text"><%= link_to 'Go back to products', products_path, class: 'btn btn-primary' %></p>
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-body">
          <h4 class="card-title">Order Receipt</h4>
          <p class="card-text">Thank you for your order!</p>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @product.title %></td>
                <td>5</td>
                <td>$<%= number_with_precision(@product.price, precision: 2) %></td>
              </tr>
              <tr>
                <td colspan="2">Total</td>
                <td>$<%= number_with_precision(@product.price, precision: 2) %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
